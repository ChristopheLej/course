{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "paths": {
      "@services": ["src/app/services/index.ts"],
      "@models": ["src/app/models/index.ts"],
      "@courses/*": ["src/app/courses/*"],
      "@components": ["src/app/components/index.ts"],
      "@utils": ["src/app/utils/index.ts"],
      "@storeConfig": ["src/app/store/index.ts"],
      "@store/*": ["src/app/store/*"],
      "@resolvers": ["src/app/resolvers/index.ts"],
      "@stubs/*": ["src/stubs/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
